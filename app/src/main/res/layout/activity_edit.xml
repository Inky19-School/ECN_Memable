<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".EditActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="6dp"
            android:background="@drawable/roundedtextinput">

            <Spinner
                android:id="@+id/mode_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundTint="@color/white" />
        </FrameLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/light_blue_A200"
            android:padding="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            app:cornerRadius="15dp"
            app:icon="@drawable/baseline_text_fields_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/addImage"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/light_blue_A200"
            android:minWidth="30dip"
            app:cornerRadius="15dp"
            app:icon="@drawable/baseline_add_photo_alternate_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/undo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:clickable="true"
                android:drawablePadding="0dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:tint="@color/white"
                app:backgroundTint="@color/light_blue_900"
                app:icon="@drawable/baseline_undo_24"
                app:iconPadding="0dp"
                app:tint="@android:color/white" />

            <Button
                android:id="@+id/redo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:clickable="true"
                android:drawablePadding="0dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:tint="@color/white"
                app:backgroundTint="@color/light_blue_900"
                app:icon="@drawable/baseline_redo_24"
                app:iconPadding="0dp"
                app:tint="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/buttonTextSize"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="7dp"
            android:background="@drawable/roundedtextinput">

            <EditText
                android:id="@+id/fontSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:inputType="number"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="6dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/roundedtextinput">

            <Spinner
                android:id="@+id/family_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </FrameLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:backgroundTint="@color/light_blue_A200"
            app:cornerRadius="15dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/openFolder"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:width="30dp"
            android:backgroundTint="@color/light_blue_A200"
            android:minWidth="0dp"
            app:cornerRadius="15dp"
            app:icon="@drawable/baseline_format_align_justify_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/white"></Button>

        <Button
            android:id="@+id/more"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:width="30dp"
            android:backgroundTint="@color/light_blue_A200"
            android:foregroundTint="@android:color/transparent"
            android:minWidth="0dp"
            app:cornerRadius="15dp"
            app:icon="@drawable/baseline_more_horiz_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:rippleColor="@android:color/transparent"></Button>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageWindow"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="409dp"
        android:layout_height="39dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            android:text="Text1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="?attr/actionModeCloseDrawable"
            android:tint="@android:color/white"
            app:backgroundTint="@color/cardview_dark_background"
            app:tint="@android:color/white" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="10"
            android:background="@android:color/transparent"
            android:ems="10"
            android:inputType="text"
            android:text="Mon meme" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="returnImage"
            android:src="@drawable/baseline_save_24"
            android:tint="@android:color/white"
            app:backgroundTint="@color/cardview_dark_background"
            app:tint="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/layer"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="0dp"
        app:icon="@drawable/baseline_layers_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageWindow" />

    <Button
        android:id="@+id/layer2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableTint="@color/light_blue_A200"
        android:foregroundTint="@color/white"
        android:gravity="center"
        android:padding="0dp"
        android:text="100%"
        app:icon="@drawable/baseline_opacity_24"
        app:iconGravity="textEnd"
        app:iconPadding="0dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageWindow" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/layer2"
        app:layout_constraintStart_toEndOf="@+id/layer"
        app:layout_constraintTop_toBottomOf="@+id/imageWindow"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/previewImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

</androidx.constraintlayout.widget.ConstraintLayout>